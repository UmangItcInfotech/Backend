{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/Blogs/{id}",
      "UpstreamPathTemplate": "/api/Blogs/{id}",
      "ServiceName": "Blogs",
      "UseServiceDiscovery": true,
      "DownstreamScheme": "http",
      "UpstreamHttpMethod": [ "Get", "Patch" ],
      "AddHeadersToRequest": {
        "Authorization": "Bearer {token}"
      }
    },
    {
      "DownstreamPathTemplate": "/api/Blogs",
      "UpstreamPathTemplate": "/api/Blogs",
      "ServiceName": "Blogs",
      "UseServiceDiscovery": true,
      "DownstreamScheme": "http",
      "UpstreamHttpMethod": [ "Post", "Get" ],
      "AddHeadersToRequest": {
        "Authorization": "Bearer {token}"
      }
    },
    {
      "DownstreamPathTemplate": "/api/Comments/{everything}",
      "UpstreamPathTemplate": "/api/Comments/{everything}",
      "ServiceName": "Comments",
      "UseServiceDiscovery": true,
      "DownstreamScheme": "http",
      "UpstreamHttpMethod": [ "Get", "Post" ],
      "AddHeadersToRequest": {
        "Authorization": "Bearer {token}"
      }

    },
    {
      "DownstreamPathTemplate": "/api/Images/{everything}",
      "UpstreamPathTemplate": "/api/Images/{everything}",
      "ServiceName": "Images",
      "UseServiceDiscovery": true,
      "DownstreamScheme": "http",
      "UpstreamHttpMethod": [ "Post" ]
    },
    {
      "DownstreamPathTemplate": "/api/Users/{everything}",
      "UpstreamPathTemplate": "/api/Users/{everything}",
      "ServiceName": "Users",
      "UseServiceDiscovery": true,
      "DownstreamScheme": "http",
      "UpstreamHttpMethod": [ "Post" ]
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Type": "Consul",
      "Host": "localhost",
      "Port": 8500,
      "PollingInterval": 5000
    }
  }
}
